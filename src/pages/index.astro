---
import Layout from '../layouts/Layout.astro';
import EmailCapture from '../components/EmailCapture.astro';
import TabletCarousel from '../components/TabletCarousel.astro';
---

<Layout>
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <!-- Logo/Brand -->
        <div class="brand-container">
          <p class="brand-subtitle">
            The sound is the source of the soul. Connected, the soul is full of light; forgotten, the soul is full of darkness.
        </div>
        <!-- Email Capture -->
        <div class="email-section">
          <EmailCapture />
        </div>
      </div>
    </section>

    <!-- Tablet Carousel Section (Optional - can be shown/hidden) -->
    <!-- <section class="carousel-section">
      <TabletCarousel />
    </section> -->
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .hero-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 5rem 1rem;
    position: relative;
  }

  .hero-content {
    text-align: center;
    max-width: 48rem;
    margin: 0 auto;
  }

  .brand-container {
    margin-bottom: 2rem;
  }

  .brand-title {
    font-family: Gossip-HighCrossStitch;
    margin: 0 auto;
    line-height: 1;
  }

  .brand-subtitle {
    font-size: 1.25rem;
    max-width: 20rem;
    text-transform: uppercase;
    margin: 0 auto;
    font-family: Gossip-MedCrossStitch, serif;
    margin-top: 1rem;
  }

  .tagline {
    margin-bottom: 2rem;
  }

  .tagline p {
    font-size: 1rem;
    margin: 0.5rem 0;
  }

  .email-section {
    margin-top: 3rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 1rem;
    }

    .brand-title {
      font-size: 3rem;
    }

    .brand-subtitle {
      font-size: 1rem;
    }

    .tagline p {
      font-size: 0.875rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .brand-title {
      font-size: 4.5rem;
    }
  }

  @media (min-width: 1025px) {
    .brand-title {
      font-size: 6rem;
    }
  }
</style>
