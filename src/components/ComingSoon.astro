---
// Reusable Coming Soon component with spinning logo
---

<main class="page-main">
  <section class="page-section">
    <div class="coming-soon">
      <img src="/images/favicon-dark.svg" alt="" class="spinning-logo" />
      <p>Coming soon</p>
    </div>
  </section>
</main>

<style>
  .page-main {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .page-section {
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .coming-soon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
    font-family: 'Gossip-MedCrossStitch', serif;
  }

  .spinning-logo {
    width: 120px;
    height: 120px;
    animation: spin 12s linear infinite;
    filter: blur(1.5px);
    user-select: none;
    -webkit-user-select: none;
    pointer-events: none;
  }

  .coming-soon p {
    font-size: var(--text-md);
    color: var(--color-text-tertiary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  @keyframes spin {
    from {
      transform: rotateX(8deg) rotateZ(-5deg) rotateY(0deg);
    }
    to {
      transform: rotateX(8deg) rotateZ(-5deg) rotateY(360deg);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .spinning-logo {
      animation: none;
    }
  }
</style>
