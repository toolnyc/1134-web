---
// Email capture component for 11:34 waitlist
interface Props {
  theme?: 'light' | 'dark';
}

const { theme = 'light' } = Astro.props;
---

<div class:list={['email-capture-container', { 'capture-dark': theme === 'dark' }]}>
  <form id="email-form">
    <div class="input-wrapper">
      <input
        type="email"
        id="email-input"
        name="email"
        placeholder="Email address"
        required
      />
    </div>

    <button
      type="submit"
      id="submit-btn"
    >
      Get updates
    </button>

    <div id="message-container" class="message-container hidden">
      <!-- Success/error messages will appear here -->
    </div>
  </form>
</div>

<script>
  const form = document.getElementById('email-form') as HTMLFormElement;
  const emailInput = document.getElementById('email-input') as HTMLInputElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const messageContainer = document.getElementById('message-container') as HTMLDivElement;

  // Email validation regex
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  function showMessage(message: string, isError: boolean = false) {
    messageContainer.textContent = message;
    messageContainer.className = `message-container ${isError ? 'error' : 'success'}`;
  }

  function hideMessage() {
    messageContainer.className = 'message-container hidden';
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    hideMessage();

    const email = emailInput.value.trim();

    // Client-side validation
    if (!email) {
      showMessage('Enter email', true);
      return;
    }

    if (!emailRegex.test(email)) {
      showMessage('Invalid', true);
      return;
    }

    // Disable form during submission
    submitBtn.disabled = true;
    submitBtn.textContent = 'Please wait';

    try {
      const response = await fetch('/api/subscribe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      if (response.ok) {
        showMessage(data.message || 'Successfully joined the waitlist', false);
        emailInput.value = '';
      } else {
        showMessage(data.error || 'Something went wrong', true);
      }
    } catch (error) {
      showMessage('Network error', true);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Get updates';
    }
  });
</script>

<style>
  .email-capture-container {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  form {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }

  .input-wrapper {
    position: relative;
    flex: 1;
  }

  input[type="email"] {
    width: 100%;
    padding: 0.625rem 1rem;
    background: var(--color-bg-primary);
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
    font-size: var(--text-sm);
    font-weight: var(--font-weight-normal);
    outline: none;
    transition: border-color var(--transition-fast), background-color var(--transition-fast);
  }

  input[type="email"]:focus {
    border-color: rgba(0, 0, 0, 0.3);
  }

  input[type="email"]::placeholder {
    color: var(--color-text-tertiary);
  }

  button {
    padding: 0.625rem 1.25rem;
    background: var(--color-text-primary);
    color: var(--color-bg-primary);
    font-size: var(--text-sm);
    font-weight: var(--font-weight-normal);
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: opacity var(--transition-fast), background-color var(--transition-fast);
    white-space: nowrap;
  }

  button:hover {
    opacity: 0.8;
  }

  button:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Dark theme styles */
  .capture-dark input[type="email"] {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.15);
    color: var(--color-text-light);
  }

  .capture-dark input[type="email"]:focus {
    border-color: rgba(255, 255, 255, 0.3);
  }

  .capture-dark input[type="email"]::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .capture-dark button {
    background: var(--color-text-light);
    color: var(--color-bg-dark);
  }

  .message-container {
    text-align: center;
    font-size: var(--text-sm);
    font-weight: var(--font-weight-normal);
    padding: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }

  .message-container.hidden {
    display: none;
  }

  .message-container.error {
    color: var(--color-text-primary);
  }

  .message-container.success {
    color: var(--color-text-secondary);
  }

  .capture-dark .message-container.error {
    color: var(--color-text-light);
  }

  .capture-dark .message-container.success {
    color: rgba(255, 255, 255, 0.6);
  }

  @media (max-width: 768px) {
    form {
      flex-direction: column;
    }

    button {
      width: 100%;
    }
  }
</style>
