---
// Email capture component for 11:34 waitlist
interface Props {
  theme?: 'light' | 'dark';
}

const { theme = 'light' } = Astro.props;
---

<div class:list={['email-capture-container', { 'capture-dark': theme === 'dark' }]}>
  <form id="email-form">
    <div class="input-wrapper">
      <input
        type="email"
        id="email-input"
        name="email"
        placeholder="Email"
        required
      />
    </div>

    <button
      type="submit"
      id="submit-btn"
    >
      Get updates
    </button>
  </form>
</div>

<script>
  const form = document.getElementById('email-form') as HTMLFormElement;
  const emailInput = document.getElementById('email-input') as HTMLInputElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  // Email validation regex
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  let toastTimeout: ReturnType<typeof setTimeout>;
  let toastContainer: HTMLDivElement | null = null;
  let toast: HTMLDivElement | null = null;

  function ensureToastExists() {
    if (!toastContainer) {
      toastContainer = document.createElement('div');
      toastContainer.className = 'toast-container';
      toast = document.createElement('div');
      toast.className = 'toast';
      toastContainer.appendChild(toast);
      document.body.appendChild(toastContainer);
    }
  }

  function showToast(message: string, isError: boolean = false, delay: number = 0) {
    ensureToastExists();
    clearTimeout(toastTimeout);

    setTimeout(() => {
      if (toast && toastContainer) {
        toast.textContent = message;
        toast.className = `toast ${isError ? 'error' : 'success'}`;
        toastContainer.classList.add('visible');

        // Auto-dismiss after 4 seconds
        toastTimeout = setTimeout(() => {
          hideToast();
        }, 4000);
      }
    }, delay);
  }

  function hideToast() {
    toastContainer?.classList.remove('visible');
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput.value.trim();

    // Client-side validation
    if (!email) {
      showToast('Enter email', true);
      return;
    }

    if (!emailRegex.test(email)) {
      showToast('Invalid email', true);
      return;
    }

    // Disable form during submission
    submitBtn.disabled = true;
    submitBtn.textContent = 'Please wait';

    try {
      const response = await fetch('/api/subscribe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      if (response.ok) {
        showToast(data.message || 'Successfully joined the waitlist', false, 1000);
        emailInput.value = '';
      } else {
        showToast(data.error || 'Something went wrong', true, 1000);
      }
    } catch (error) {
      showToast('Network error', true, 1000);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Get updates';
    }
  });
</script>

<style>
  .email-capture-container {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .input-wrapper {
    position: relative;
    flex: 1;
  }

  input[type="email"] {
    width: 100%;
    padding: 0.625rem 1rem;
    background: var(--color-bg-primary);
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
    font-size: 1rem;
    font-weight: var(--font-weight-normal);
    outline: none;
    transition: border-color var(--transition-fast), background-color var(--transition-fast);
  }

  input[type="email"]:focus {
    border-color: rgba(0, 0, 0, 0.3);
  }

  input[type="email"]::placeholder {
    color: var(--color-text-tertiary);
    
  }

  button {
    flex: 1;
    padding: 0.625rem 1.25rem;
    background: var(--color-text-primary);
    color: var(--color-bg-primary);
    font-family: 'Helvetica', sans-serif;
    font-size: var(--text-sm);
    font-weight: var(--font-weight-normal);
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: opacity var(--transition-fast), background-color var(--transition-fast);
    white-space: nowrap;
    opacity: .66;
  }

  button:hover {
    opacity: 0.8;
  }

  button:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  button:disabled:hover {
    opacity: 0.4;
  }

  /* Dark theme styles */
  .capture-dark input[type="email"] {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.15);
    color: var(--color-text-light);
  }

  .capture-dark input[type="email"]:focus {
    border-color: rgba(255, 255, 255, 0.3);
  }

  .capture-dark input[type="email"]::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .capture-dark button {
    background: var(--color-text-light);
    color: var(--color-bg-dark);
  }

  .capture-dark button:disabled:hover {
    opacity: 0.4;
  }

  @media (max-width: 768px) {
    form {
      flex-direction: column;
    }

    .input-wrapper,
    button {
      flex: none;
      width: 100%;
    }
  }
</style>

<style is:global>
  .toast-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    padding: var(--spacing-lg);
    pointer-events: none;
    z-index: 10000;
    transform: translateY(100%);
    opacity: 0;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1),
                opacity 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .toast-container.visible {
    transform: translateY(0);
    opacity: 1;
  }

  .toast {
    background: var(--color-text-primary);
    color: var(--color-bg-primary);
    padding: 0.75rem 1.25rem;
    border-radius: var(--border-radius);
    font-size: var(--text-sm);
    font-weight: var(--font-weight-normal);
    text-align: center;
    max-width: 90%;
    opacity: 0.8;
  }
</style>
